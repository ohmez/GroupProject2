<article id="main">
    <header>
        <h2>Restaurant Finder</h2>
        <p>Get Ready for your trip by looking up local restaurants!</p>
    </header>
</article>

<section class="wrapper style5">
    <div class="container">
        <div class="row">
            <div class="col">
                <img src="/images/zomato-logo.png" class="d-block mx-auto" alt="">
                <div class="feedback alert alert-danger text-center text-capitalize">please enter city</div>
                <form id="searchForm" class="my-4">
                    <!-- form group -->
                    <div class="form-group my-3">
                        <select class="custom-select text-capitalize" id="searchCategory">


                        </select>
                    </div>
                    <!-- end of form group -->

                    <!-- input group -->
                    <div class="input-group">
                        <input type="text" class="form-control text-capitalize" id="searchCity" placeholder="enter city....">
                        <div class="input-group-append">
                            <button type="submit" class="button primary text-capitalize">search</button>
                        </div>
                    </div>
                    <!-- input group -->
                </form>
                <img src="/images/loader.gif" class="loader" alt="">
            </div>
        </div>
    </div>
    <!-- restaurant section -->

    <section class="py-5">
        <div class="container">
            <div class="row" id="restaurant-list">
            </div>
    </section>
		<section id="two" class="wrapper alt style2">
			<section class="spotlight">
				<div class="image">
					<img src="/images/pic07.jpeg" alt="" />
				</div>
				<div class="content">
					<br />
					<p style="color:white">“Ask not what you can do for your country. Ask what’s for lunch.” ― Orson Welles</p>
				</div>
			</section>
</section>

